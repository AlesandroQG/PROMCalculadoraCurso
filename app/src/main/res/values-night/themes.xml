<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculadora" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/verde</item>
    </style>

    <style name="NumberButton">
        <item name="android:background">@color/grisOscuro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="SymbolButton">
        <item name="android:background">@color/verde</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ScreenNumber">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="Separator">
        <item name="android:background">@color/gris</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:elevation">3dp</item>
    </style>
</resources>